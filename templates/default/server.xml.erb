<Server port="<%= node["artifactory"]["shutdown_port"] %>" shutdown="SHUTDOWN">

    <Service name="Catalina">
        <Connector
              address="<%=node['artifactory']['address']  %>"
                 port="<%=node['artifactory']['port']     %>"
            proxyName="<%=node['artifactory']['proxyName']%>"
            proxyPort="<%=node['artifactory']['proxyPort']%>" />

        <Engine name="Catalina" defaultHost="localhost">
            <Host name="localhost" appBase="webapps"/>
        </Engine>

    </Service>
</Server>

